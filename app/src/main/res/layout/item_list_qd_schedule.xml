<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubdotumbold"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024년 정기 기사 1회" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCategory" />

        <TextView
            android:id="@+id/writtenApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kopubdotumbold"
            android:text="필기원서접수"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/txtWrittenApp"
            app:layout_constraintHorizontal_weight="3.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtWrittenApp" />

        <TextView
            android:id="@+id/txtWrittenApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="end"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/writtenApp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="2024.01.23 ~ 2024.01.26" />

        <TextView
            android:id="@+id/writtenExam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kopubdotumbold"
            android:text="필기시험"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/txtWrittenExam"
            app:layout_constraintHorizontal_weight="3.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtWrittenExam" />

        <TextView
            android:id="@+id/txtWrittenExam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="end"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4dp"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/writtenExam"
            app:layout_constraintTop_toBottomOf="@+id/txtWrittenApp"
            tools:text="산업수요 맞춤형 고등학교 및 특성화 고등학교필기시험 면제자 검정※ 일반인 필기시험 면제자 응시 불가" />

        <TextView
            android:id="@+id/writtenExamResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kopubdotumbold"
            android:text="필기합격발표"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/txtWrittenExamResult"
            app:layout_constraintHorizontal_weight="3.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtWrittenExamResult" />

        <TextView
            android:id="@+id/txtWrittenExamResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="end"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4dp"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/writtenExamResult"
            app:layout_constraintTop_toBottomOf="@+id/txtWrittenExam"
            tools:text="2024.03.13" />

        <TextView
            android:id="@+id/practicalApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kopubdotumbold"
            android:text="실기원서접수"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPracticalApp"
            app:layout_constraintHorizontal_weight="3.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtPracticalApp" />

        <TextView
            android:id="@+id/txtPracticalApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="end"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/practicalApp"
            app:layout_constraintTop_toBottomOf="@+id/txtWrittenExamResult"
            tools:text="2024.03.26 ~ 2024.03.29" />

        <TextView
            android:id="@+id/practicalExam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kopubdotumbold"
            android:text="실기시험"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPracticalExam"
            app:layout_constraintHorizontal_weight="3.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtPracticalExam" />

        <TextView
            android:id="@+id/txtPracticalExam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="end"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/practicalExam"
            app:layout_constraintTop_toBottomOf="@+id/txtPracticalApp"
            tools:text="2024.04.27 ~ 2024.05.17" />

        <TextView
            android:id="@+id/practicalExamResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kopubdotumbold"
            android:text="실기합격발표"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPracticalExamResult"
            app:layout_constraintHorizontal_weight="3.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtPracticalExamResult" />

        <TextView
            android:id="@+id/txtPracticalExamResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/kopubdotummedium"
            android:gravity="end"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/practicalExamResult"
            app:layout_constraintTop_toBottomOf="@+id/txtPracticalExam"
            tools:text="2024.06.18" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>